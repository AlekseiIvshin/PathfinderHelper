<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/vertical_margin.default"
    android:layout_marginLeft="@dimen/horizontal_margin.default"
    android:layout_marginRight="@dimen/horizontal_margin.default"
    android:layout_marginTop="@dimen/vertical_margin.default"
    android:elevation="@dimen/elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_hero_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/vertical_margin.default"
            android:paddingLeft="@dimen/horizontal_margin.default"
            android:paddingRight="@dimen/horizontal_margin.default"
            android:paddingTop="@dimen/vertical_margin.default"
            android:ellipsize="end"
            android:layout_weight="1"
            style="@style/TextAppearance.AppCompat.Body2"
            android:lines="1"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce elit velit, ultricies ac libero quis, feugiat fringilla quam. Suspendisse condimentum gravida consequat. " />

    </LinearLayout>
</android.support.v7.widget.CardView>